<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MapleLeaves" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cuilv</item>
        <item name="colorPrimaryVariant">@color/cuilv</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- 底部导航栏字体样式 -->
    <style name="BottomTabTextStyleActive" >
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BottomTabTextStyleInactive" >
        <item name="android:textSize">12sp</item>
    </style>
</resources>